<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
      Control 页面会通过 OkHttp 访问设置项 webrtc_url（常见为局域网 http://192.168.x.x:8889/...）。
      Android 9+ 默认禁止明文 HTTP：需要在这里显式放通。

      策略：只对私有网段/本地域放通 cleartext，公网仍按默认策略（通常只允许 https）。

      如果你能固定服务域名，推荐把下面的 <domain> 收敛成你的域名/主机名，而不是放通整个 LAN。
    -->

    <!-- 192.168.0.0/16 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.0.0</domain>
    </domain-config>

    <!-- 10.0.0.0/8 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.0.0</domain>
    </domain-config>

    <!-- 172.16.0.0/12 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">172.16.0.0</domain>
    </domain-config>

    <!-- Android “localhost” loopback -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>

    <!-- Backward-compatible: keep the original fixed IP in case someone relies on it -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.1.3</domain>
    </domain-config>
</network-security-config>
