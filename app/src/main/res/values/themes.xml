<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PiVech3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PiVech3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Immersive status bar: status bar is transparent and content is laid out behind it. -->
    <style name="Theme.PiVech3.Immersive" parent="Theme.PiVech3.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Let content extend into system bars (paired with WindowCompat.setDecorFitsSystemWindows(window, false)) -->
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.PiVech3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PiVech3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>