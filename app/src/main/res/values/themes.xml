<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PiVech3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_variant</item>
        <item name="colorOnPrimary">@color/app_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorSecondaryVariant">@color/app_secondary_variant</item>
        <item name="colorOnSecondary">@color/app_on_secondary</item>

        <!-- Optional surface defaults (nice with white primary) -->
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorOnSurface">@color/app_on_surface</item>

        <!-- Status bar: transparent + light icons (because content behind is light) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PiVech3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Immersive status bar: status bar is transparent and content is laid out behind it. -->
    <style name="Theme.PiVech3.Immersive" parent="Theme.PiVech3.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Let content extend into system bars (paired with WindowCompat.setDecorFitsSystemWindows(window, false)) -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Ensure light status bar icons in immersive mode as well -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- App bar overlay: switch to LIGHT so toolbar text/icons become dark on white background -->
    <style name="Theme.PiVech3.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.PiVech3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>